<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.home.BookingDetailsActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="20dp"
            android:elevation="1dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_button" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBack">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/esther"
                    android:textColor="@color/black_text_color2"
                    android:textSize="30sp"
                    app:fontFamily="@font/poppins_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMap"
                    android:layout_width="match_parent"
                    android:layout_height="226dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCustomerName" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/theme"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivMap"

                    />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/stroke_light"
                    app:layout_constraintTop_toBottomOf="@+id/tvDateTime" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmountReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmountMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:text="@string/by_google_pay"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    app:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view1" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/stroke_light"
                    app:layout_constraintTop_toBottomOf="@+id/tvAmountMethod" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivDriverImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/driver"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toEndOf="@+id/ivDriverImage"
                    app:layout_constraintTop_toTopOf="@+id/ivDriverImage"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/rodney_r_matney"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toEndOf="@+id/ivDriverImage"
                    app:layout_constraintTop_toBottomOf="@+id/titleDriverName"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tcCarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="@string/honda_civic"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivDriverImage"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCarModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="@string/kaa_458_black"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleDriverName"

                    />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/stroke_light"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/ivDriverImage" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFareDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/fare_receipt"
                    android:textSize="16sp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintStart_toStartOf="@id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleRideFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/ride_fare"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/tvFareDetails"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRideFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/tvFareDetails" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/subtotal"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/titleRideFare" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/tvRideFare" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleTotalFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_fare"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/titleSubtotal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTotalFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubtotal" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleWaitingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/waiting_time"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/titleTotalFare" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWaitingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_text_color2"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalFare" />

                <TextView
                    android:id="@+id/tvDownloadInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/bg_outline_circular"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:text="Download Invoice"
                    app:layout_constraintTop_toBottomOf="@id/tvWaitingTime"
                    android:textColor="@color/black_text_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>