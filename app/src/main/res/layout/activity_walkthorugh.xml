<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="walkViewModel"
            type="com.mb_driver.viewmodel.WalkThroughViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.walk_though.WalkThrough">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSalonSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_8sdp"
            android:text="Skip>"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpWalk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".7" />

        <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
            android:id="@+id/dots_indicator"
            attachToViewPager="@{vpWalk}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/theme_button"
            app:dotsSize="12dp"
            app:dotsSpacing="4dp"
            app:dotsStrokeColor="@color/text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/bg_theme_shape_round_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/txt_next"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/dots_indicator" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/shape_round_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/txt_skip"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_next" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/clBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_blur"
            android:paddingVertical="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                android:id="@+id/salonDotIndicator"
                attachToViewPager="@{vpWalk}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dotsColor="@color/theme_button"
                app:dotsSize="12dp"
                app:dotsSpacing="4dp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:dotsStrokeColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSalonNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/bg_theme_shape_round_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/txt_next"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/dots_indicator" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
