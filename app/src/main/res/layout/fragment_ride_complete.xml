<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".view.fragment.RideCompleteFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivClose"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        app:srcCompat="@drawable/baseline_close_24"
        android:layout_marginTop="12dp"
        app:tint="@color/grey_text_color"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ivClose"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp"
            android:text="@string/ride_completed"
            android:textSize="20sp"
            app:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black_text_color_3"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivDriverImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/photo_driver"
            android:layout_marginTop="16dp"
            android:layout_marginStart="21dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/ivDriverImage"
            app:layout_constraintStart_toEndOf="@+id/ivDriverImage"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:text="@string/patrick_cook"
            android:textSize="18sp"
            android:textColor="@color/black_text_color"
            app:fontFamily="@font/poppins_semibold"

            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            app:layout_constraintTop_toBottomOf="@+id/tvDriverName"
            app:layout_constraintStart_toStartOf="@id/tvDriverName"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:rating="4"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCarBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_color"
            app:layout_constraintStart_toStartOf="@+id/ratingBar"
            android:layout_marginEnd="21dp"
            android:text="@string/volkswagen"
            android:textSize="15sp"
            android:gravity="center"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRateDriver"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/white"
            android:layout_marginEnd="21dp"
            app:layout_constraintStart_toStartOf="@+id/tvCarNo"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/rate"
            android:textSize="12sp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            app:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toTopOf="@+id/tvDriverName"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCarNo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/shape_round_button"
            android:backgroundTint="@color/grey_bg"
            android:textColor="@color/black_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="21dp"
            android:text="@string/hs785k"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            app:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@+id/tvRateDriver"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTypeTripTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/type_of_trip"
            app:layout_constraintTop_toBottomOf="@+id/ivDriverImage"
            app:layout_constraintStart_toStartOf="@+id/ivDriverImage"
            android:textColor="@color/grey_text_color"
            app:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTypeTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/instant"
            app:layout_constraintTop_toBottomOf="@+id/ivDriverImage"
            app:layout_constraintStart_toEndOf="@id/tvTypeTripTitle"
            android:textColor="@color/black_text_color"
            app:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvRideMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTypeTripTitle"
            android:layout_marginHorizontal="18dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:text="@string/_11_24"
                    app:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="21dp"
                    android:textColor="@color/grey_text_color2"
                    android:textSize="13sp"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTrack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tvStartTime"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/ic_route"
                    app:layout_constraintTop_toTopOf="@+id/tvStartTime"
                    app:layout_constraintTop_toBottomOf="@+id/tvStartTime"
                    app:layout_constraintBottom_toBottomOf="@id/tvEndTime"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStartAdress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivTrack"
                    android:layout_marginStart="20dp"
                    android:text="@string/_1_thrale_street_london_se19hw_uk"
                    app:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="21dp"
                    android:textColor="@color/black_text_color2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:textSize="15sp"
                    android:minLines="3"
                    android:maxLines="4"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvStartAdress"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:text="@string/_11_24"
                    app:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/grey_text_color2"
                    android:textSize="13sp"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEndAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/tvEndTime"
                    app:layout_constraintStart_toEndOf="@+id/ivTrack"
                    android:layout_marginStart="20dp"
                    android:text="@string/_18_ocean_avenue_london_se19hw_uk"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/black_text_color2"
                    android:textSize="15sp"
                    android:minLines="3"
                    android:maxLines="4"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llCustomerDetails"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="18dp"
            app:layout_constraintTop_toBottomOf="@+id/cvRideMap"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vinayak"
                android:textSize="16sp"
                app:fontFamily="@font/poppins_medium"
                android:textColor="@color/black_text_color_3"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/stroke_light"
                app:layout_constraintStart_toStartOf="@+id/cvRideMap"
                app:layout_constraintEnd_toEndOf="@+id/cvRideMap"
                app:layout_constraintTop_toBottomOf="@+id/tvRateDriver"
                android:layout_marginTop="15dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCustomerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_40_060298722"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                app:fontFamily="@font/poppins_medium"
                android:textColor="@color/black_text_color_3"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/stroke_light"
                app:layout_constraintStart_toStartOf="@+id/cvRideMap"
                app:layout_constraintEnd_toEndOf="@+id/cvRideMap"
                app:layout_constraintTop_toBottomOf="@+id/tvRateDriver"
                android:layout_marginTop="15dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCustomerMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kindly_call_me_once_you_reached"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                app:fontFamily="@font/poppins_medium"
                android:textColor="@color/black_text_color_3"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/stroke_light"
                app:layout_constraintStart_toStartOf="@+id/cvRideMap"
                app:layout_constraintEnd_toEndOf="@+id/cvRideMap"
                app:layout_constraintTop_toBottomOf="@+id/tvRateDriver"
                android:layout_marginTop="15dp"
                />




        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCutStroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCustomerDetails"
            android:src="@drawable/ic_cut_stroke"
            android:layout_marginTop="20dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPaymentSummary"
            app:layout_constraintTop_toBottomOf="@+id/ivCutStroke"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:text="@string/payment_summary"
            app:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/black_text_color"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvPaymentSummary"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="18dp"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/rlSubTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sub_total"
                        android:textSize="12sp"
                        android:layout_marginTop="15dp"
                        app:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black_text_color_3"
                        />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSubTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_21_99"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        app:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black_text_color_3"
                        />





                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlVAT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vat"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        app:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black_text_color_3"
                        />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvVat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_21_99"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        app:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black_text_color_3"
                        />





                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/discount"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        app:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black_text_color_3"
                        />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_21_99"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        app:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black_text_color_3"
                        />




                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlTotalCharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_charge"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        app:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black_text_color_3"
                        />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTotalCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_21_99"
                        android:textSize="14sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="15dp"
                        app:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black_text_color_3"
                        />


                </RelativeLayout>





            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>







    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

</layout>