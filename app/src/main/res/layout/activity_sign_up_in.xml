<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivWalkImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvWalkTitle"
            android:src="@drawable/ic_venus"
            android:layout_marginTop="50dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWalkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/tvWalkDesc"
            android:layout_margin="20dp"
            android:text="@string/txt_venus"
            android:gravity="center"
            android:textColor="@color/walk_title_color"
            android:textSize="24dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWalkDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/guide"
            android:layout_margin="30dp"
            android:text="@string/txt_clear_air_ride"
            android:gravity="center"
            android:textColor="@color/walk_desc_color"
            android:textSize="16dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".7"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/txt_sign_in"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/guide" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHaveAnAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/txt_have_an_account"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/tvSignIn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>