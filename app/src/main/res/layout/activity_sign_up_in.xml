<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/theme"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivWalkImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_200sdp"
            android:layout_marginEnd="-40dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:src="@drawable/app_logo_image"
            app:layout_constraintBottom_toTopOf="@id/tvWalkTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tvWalkTitle"
            android:layout_width="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:src="@drawable/ic_ujeff"
            app:layout_constraintBottom_toTopOf="@id/tvWalkDesc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWalkDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/txt_clear_air_ride"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@id/guide" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".7" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bg_theme_shape_round_button"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            android:text="@string/txt_sign_in"
            android:textColor="@color/theme"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/guide" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHaveAnAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            android:text="@string/txt_have_an_account"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/tvSignIn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>