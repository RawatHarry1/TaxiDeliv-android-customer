<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.RatingsListingFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMenuBurg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:elevation="1dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/ratings"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="@+id/ivMenuBurg"
            app:layout_constraintTop_toBottomOf="@+id/ivMenuBurg"

            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:listitem="@layout/item_ratings" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:background="@drawable/stroke_rectangular"
            android:drawableStart="@drawable/ic_filter"
            android:drawableEnd="@drawable/ic_keyboard_arrow_down_24"
            android:drawablePadding="10dp"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="@string/filter"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>