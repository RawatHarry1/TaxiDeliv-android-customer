<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20sdp"
        android:background="@drawable/bg_top_rounded"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:id="@+id/viewTop"
            android:layout_width="30dp"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"

            android:background="@color/grey_line_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivLocationMarker"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/location_placeholder"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvAddress"
            app:layout_constraintTop_toBottomOf="@id/viewTop" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tvChange"
            app:layout_constraintStart_toEndOf="@+id/ivLocationMarker"
            app:layout_constraintTop_toBottomOf="@id/viewTop" />

        <TextView
            android:id="@+id/tvChange"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Change"
            android:textSize="14sp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textColor="@color/theme"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/bg_outline_gray_4dp"
            app:layout_constraintTop_toTopOf="@id/tvAddress"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etNickName"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@id/ivLocationMarker"
            app:layout_constraintEnd_toEndOf="@id/tvChange"
            android:fontFamily="@font/poppins_regular"
            android:hint="Nick Name"
            android:textSize="14sp"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColorHint="@color/grey_light_text"
            android:background="@drawable/bg_outline_gray_4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            android:layout_height="42dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSaveAs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Save as"
            app:layout_constraintStart_toStartOf="@id/etNickName"
            android:textColor="@color/black_text_color"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etNickName" />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:text="@string/home"
            app:layout_constraintStart_toStartOf="@id/tvSaveAs"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textColor="@color/black_text_color"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/bg_outline_gray_4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSaveAs"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvWork"
            android:layout_width="wrap_content"
            android:text="@string/work"
            app:layout_constraintStart_toEndOf="@id/tvHome"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textColor="@color/black_text_color"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/bg_outline_gray_4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSaveAs"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvOther"
            android:layout_width="wrap_content"
            android:text="@string/other"
            app:layout_constraintStart_toEndOf="@id/tvWork"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textColor="@color/black_text_color"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/bg_outline_gray_4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSaveAs"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etOther"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@id/ivLocationMarker"
            app:layout_constraintEnd_toEndOf="@id/tvChange"
            android:fontFamily="@font/poppins_regular"
            android:hint="Other"
            android:textSize="14sp"
            android:visibility="gone"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColorHint="@color/grey_light_text"
            android:background="@drawable/bg_outline_gray_4dp"
            app:layout_constraintTop_toBottomOf="@id/tvHome"
            android:layout_height="42dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/add_address"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/ivLocationMarker"
            app:layout_constraintEnd_toEndOf="@id/tvChange"
            app:layout_constraintTop_toBottomOf="@id/etOther" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>