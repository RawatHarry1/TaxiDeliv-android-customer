<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_rounded"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_car_detail"
                android:paddingBottom="60dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvOfferTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="50% off on your first ride"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCarType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/txt_economy"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/ivCarImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvOfferTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_stand_up"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/poppins"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/txt_time"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/tvCarType"
                    app:layout_constraintTop_toBottomOf="@id/tvCarType" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPersonCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:drawableStart="@drawable/ic_user_count"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/poppins"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/txt_count"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/tvTime"
                    app:layout_constraintTop_toBottomOf="@id/tvCarType" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCarImage"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_margin="4dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvOfferTitle"
                    app:srcCompat="@drawable/ic_tesla_car_model" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-58dp"
                android:background="@drawable/bg_top_rounded"
                app:layout_constraintTop_toBottomOf="@id/clCar">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCustomerDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="22sp"
                    android:text="@string/txt_customer_details"
                    android:textColor="@color/black_text_color_dark"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/tvPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/txt__20_43"
                    android:textColor="@color/black_text_color_dark"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tvCustomerDetail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvCustomerDetail" />

                <View
                    android:id="@+id/viewCross"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/black_text_color"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tvOriginalPrice"
                    app:layout_constraintEnd_toEndOf="@+id/tvOriginalPrice"
                    app:layout_constraintStart_toStartOf="@+id/tvOriginalPrice"
                    app:layout_constraintTop_toTopOf="@+id/tvOriginalPrice" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:text="@string/txt__20_43"
                    android:textColor="@color/black_text_color"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/tvCustomerDetail"
                    app:layout_constraintEnd_toStartOf="@+id/tvPrice"
                    app:layout_constraintTop_toTopOf="@id/tvCustomerDetail" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/txt_customer_name"
                    android:textColor="@color/grey_text_color"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/tvContactDetails"
                    app:layout_constraintStart_toStartOf="@id/tvCustomerDetail"
                    app:layout_constraintTop_toBottomOf="@id/tvCustomerDetail" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvContactDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/txt_contact_details"
                    android:textColor="@color/grey_text_color"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/tvPrice"
                    app:layout_constraintTop_toBottomOf="@id/tvCustomerDetail" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCustomerNameValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="-1sp"
                    android:text="@string/txt_gurman_kanda"
                    android:textColor="@color/black_text_color"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/tvNumber"
                    app:layout_constraintStart_toStartOf="@id/tvCustomerName"
                    app:layout_constraintTop_toBottomOf="@id/tvCustomerName" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="-1sp"
                    android:text="@string/txt_1234567890"
                    android:textColor="@color/black_text_color"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/tvContactDetails"
                    app:layout_constraintTop_toBottomOf="@id/tvContactDetails" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etNotes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/txt_notes"
                    android:maxLength="150"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black_text_color"
                    android:textColorHint="@color/grey_text_color"
                    app:layout_constraintEnd_toEndOf="@id/tvNumber"
                    app:layout_constraintStart_toStartOf="@id/tvCustomerNameValue"
                    app:layout_constraintTop_toBottomOf="@id/tvCustomerNameValue" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPayByCash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvPromoCode">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clPayByCash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPayByCash"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="20dp"
                            android:fontFamily="@font/poppins"
                            android:padding="18dp"
                            android:text="Pay by Cash"
                            android:textColor="@color/black_text_color"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:drawableStartCompat="@drawable/ic_pay_by_money"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ivPayByCash"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/ivPayByCash"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/bg_circular_stroke_black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPromoCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etNotes">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPromoCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="20dp"
                            android:fontFamily="@font/poppins"
                            android:padding="18dp"
                            android:text="@string/txt_apply_promo_code"
                            android:textColor="@color/black_text_color"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:drawableStartCompat="@drawable/ic_promo_ticket"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvRemove"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvRemove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text="@string/remove"
                            android:textColor="@color/cancel_btn_red_color"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvNewCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:layout_constraintBottom_toTopOf="@id/tvConfirmBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvPayByCash">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clPayByCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tvNewCard"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawablePadding="20dp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/txt_add_new_card"
                                android:textColor="@color/black_text_color"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                app:drawableStartCompat="@drawable/ic_credit_card"
                                app:layout_constraintEnd_toStartOf="@+id/ivPayByCard"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tvSelectedCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="44dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Selected card: **** 1234"
                                android:textSize="12sp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvNewCard" />

                            <TextView
                                android:id="@+id/tvChangeCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="2dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/change"
                                android:visibility="gone"
                                android:textColor="@color/theme"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tvSelectedCard"
                                app:layout_constraintTop_toBottomOf="@+id/tvNewCard" />

                            <ImageView
                                android:id="@+id/ivPayByCard"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/bg_circular_stroke_black"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvConfirmBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/bg_button"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/txt_confirm"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvNewCard" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>



