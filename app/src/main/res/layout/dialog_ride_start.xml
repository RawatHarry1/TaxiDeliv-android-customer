<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clRootView"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        android:background="@drawable/bg_top_rounded">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clConnecting"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_margin="15dp"
            android:visibility="visible"
            tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvConnecting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="@color/arrive_text_color"
            android:lineSpacingExtra="5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            app:drawableTint="@color/black"
            android:drawableStart="@drawable/ic_dot_circle"
            android:text="@string/txt_connecting_you_to_a_driver"/>


            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvConnecting"
                android:layout_marginTop="10dp"
                android:indeterminate="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                style="?android:attr/progressBarStyleHorizontal"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="40dp"
                android:text="Refresh"
                android:visibility="gone"
                android:background="@drawable/bg_button"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:drawableTint="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/tvSlideCancelBtn"/>


            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/tvSlideCancelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:area_margin="4dp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:text="@string/txt_slide_to_cancel"
                app:animation_duration="250"
                app:border_radius="50dp"
                android:background="@drawable/bg_button"
                app:inner_color="@android:color/transparent"
                app:outer_color="@android:color/transparent"
                app:text_color="@color/white"
                app:slider_icon="@drawable/ic_arrow_right"
                app:complete_icon="@drawable/ic_arrow_right"
                app:rotate_icon="@drawable/ic_arrow_right"
                app:text="@string/txt_slide_to_cancel"
                app:slider_icon_color="@color/white"
                app:text_size="12sp"
                app:slider_height="50dp"
                app:slider_locked="false"
                app:bounce_on_start="true"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPickUpLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_margin="15dp"
            android:visibility="visible"
            >

            <View
                android:id="@+id/viewTop"
                android:layout_width="30dp"
                android:layout_height="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:background="@color/grey_line_color">
            </View>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewTop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/photo_driver"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ivProfileImage"
                app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                app:layout_constraintEnd_toStartOf="@+id/llDistanceTime"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/patrick_cook"
                android:textSize="18sp"
                android:textColor="@color/black_text_color"
                app:fontFamily="@font/poppins_semibold"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star"
                app:layout_constraintStart_toStartOf="@+id/tvUserName"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                android:id="@+id/ivStar"/>
            <TextView
                android:id="@+id/tvDriverRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ivStar"
                app:layout_constraintTop_toTopOf="@+id/ivStar"
                app:layout_constraintBottom_toBottomOf="@+id/ivStar"
                android:textSize="@dimen/_10ssp"
                android:text="2"
                android:layout_marginStart="@dimen/_3sdp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/llDistanceTime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/ivProfileImage"
                app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"
                app:layout_constraintEnd_toStartOf="@+id/ivChat"
                app:cardCornerRadius="@dimen/_30sdp"
                app:cardElevation="@dimen/_1sdp"
                android:layout_marginEnd="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvDistanceTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_gravity="center_horizontal"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        />
                    <TextView
                        android:id="@+id/tvDistanceTimeMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/_7ssp"
                        android:singleLine="true"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chat"
                app:layout_constraintEnd_toStartOf="@id/ivCall"
                app:layout_constraintTop_toTopOf="@id/ivProfileImage"
                app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"
                android:layout_marginEnd="10dp"
                 />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_call"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivProfileImage"
                app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ivProfileImage"
                app:layout_constraintStart_toStartOf="@+id/ivProfileImage"
                android:layout_marginTop="10dp"
                android:text="@string/txt_hs785k"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:maxLength="10"
                android:paddingEnd="20dp"
                android:background="@drawable/shape_round_button"
                android:backgroundTint="@color/grey_line_color"
                android:textColor="@color/black_text_color"
                app:fontFamily="@font/poppins_semibold"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCarName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textStyle="normal"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/ivCar"
                android:textColor="@color/black_text_color"
                android:lineSpacingExtra="2sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/tvNumber"
                app:layout_constraintTop_toBottomOf="@id/tvNumber"
                android:text="@string/txt_volkswagen_polo"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCar"
                android:layout_width="140dp"
                android:layout_height="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvNumber"
                />

            <View
                android:id="@+id/viewLocationTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tvCarName"
                android:layout_marginTop="15dp"
                android:background="@color/grey_arrow"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/black_text_color"
                android:lineSpacingExtra="5sp"
                app:layout_constraintTop_toBottomOf="@id/viewLocationTop"
                app:layout_constraintStart_toStartOf="@id/viewLocationTop"
                android:drawableStart="@drawable/ic_address"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/txt_2664_royal_ln_mesa_newjersey"/>


            <View
                android:id="@+id/viewLocationBottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tvAddress"
                android:layout_marginTop="15dp"
                android:background="@color/grey_arrow"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDistanceTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/viewLocationBottom"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/grey_text_color"
                    android:text="@string/txt_time_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/grey_text_color"
                    android:text="@string/txt_distance"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/grey_text_color"
                    android:text="@string/txt_price_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDistanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/black_text_color"
                    android:lineSpacingExtra="-1sp"
                    android:text="@string/txt_2_miles"
                    app:layout_constraintTop_toBottomOf="@id/tvDistance"
                    app:layout_constraintStart_toStartOf="@id/tvDistance"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textColor="@color/black_text_color"
                    android:lineSpacingExtra="-1sp"
                    android:text="@string/txt_time"
                    app:layout_constraintTop_toBottomOf="@id/tvTime"
                    app:layout_constraintStart_toStartOf="@id/tvTime"
                    app:layout_constraintEnd_toEndOf="@id/tvTime"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPriceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/black_text_color"
                    android:lineSpacingExtra="-1sp"
                    android:text="@string/txt_actual_price"
                    app:layout_constraintTop_toBottomOf="@id/tvPrice"
                    app:layout_constraintEnd_toEndOf="@id/tvPrice"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/viewBottom"
                android:layout_width="200dp"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@id/clDistanceTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:background="@color/black_text_color">
            </View>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
