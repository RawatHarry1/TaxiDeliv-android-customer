<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_rounded"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clConnecting"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="15dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvConnecting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableStart="@drawable/ic_dot_circle"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:lineSpacingExtra="5sp"
                android:text="@string/txt_connecting_you_to_a_driver"
                android:textColor="@color/arrive_text_color"
                android:textSize="15sp"
                android:textStyle="normal"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="10dp"
                android:indeterminate="true"
                app:layout_constraintTop_toBottomOf="@id/tvConnecting" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_button"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="40dp"
                android:paddingBottom="10dp"
                android:text="Refresh"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone"
                app:drawableTint="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/tvSlideCancelBtn" />


            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/tvSlideCancelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:background="@drawable/bg_button"
                android:text="@string/txt_slide_to_cancel"
                app:animation_duration="250"
                app:area_margin="4dp"
                app:border_radius="50dp"
                app:bounce_on_start="true"
                app:complete_icon="@drawable/ic_arrow_right"
                app:inner_color="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:outer_color="@android:color/transparent"
                app:rotate_icon="@drawable/ic_arrow_right"
                app:slider_height="50dp"
                app:slider_icon="@drawable/ic_arrow_right"
                app:slider_icon_color="@color/white"
                app:slider_locked="false"
                app:text="@string/txt_slide_to_cancel"
                app:text_color="@color/white"
                app:text_size="12sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPickUpLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <View
                android:id="@+id/viewTop"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey_line_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/photo_driver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewTop" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/patrick_cook"
                android:textColor="@color/black_text_color"
                android:textSize="18sp"
                app:fontFamily="@font/poppins_semibold"
                app:layout_constraintEnd_toStartOf="@+id/llDistanceTime"
                app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tvUserName"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                app:srcCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/tvDriverRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:text="2"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStar"
                app:layout_constraintStart_toEndOf="@+id/ivStar"
                app:layout_constraintTop_toTopOf="@+id/ivStar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/llDistanceTime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="@dimen/_30sdp"
                app:cardElevation="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"
                app:layout_constraintEnd_toStartOf="@+id/ivChat"
                app:layout_constraintTop_toTopOf="@id/ivProfileImage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDistanceTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_bold"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tvDistanceTimeMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textSize="@dimen/_7ssp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"
                app:layout_constraintEnd_toStartOf="@id/ivCall"
                app:layout_constraintTop_toTopOf="@id/ivProfileImage"
                app:srcCompat="@drawable/ic_chat" />

            <ImageView
                android:id="@+id/ivChatIndicator"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/bg_sos_circular"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/ivChat"
                app:layout_constraintTop_toTopOf="@id/ivChat" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivProfileImage"
                app:srcCompat="@drawable/ic_call" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_round_button"
                android:backgroundTint="@color/grey_line_color"
                android:maxLength="10"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/txt_hs785k"
                android:textColor="@color/black_text_color"
                android:textSize="22sp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins_semibold"
                app:layout_constraintStart_toStartOf="@+id/ivProfileImage"
                app:layout_constraintTop_toBottomOf="@+id/ivProfileImage" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCarName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins"
                android:lineSpacingExtra="2sp"
                android:text="@string/txt_volkswagen_polo"
                android:textColor="@color/black_text_color"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/ivCar"
                app:layout_constraintStart_toStartOf="@id/tvNumber"
                app:layout_constraintTop_toBottomOf="@id/tvNumber" />

            <TextView
                android:id="@+id/tvViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:paddingVertical="@dimen/_4sdp"
                android:text="@string/view_packages"
                android:textColor="@color/theme"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCarName" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCar"
                android:layout_width="140dp"
                android:layout_height="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvNumber" />


            <View
                android:id="@+id/viewLocationTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_arrow"
                app:layout_constraintTop_toBottomOf="@id/tvViewDetails" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMainPickDrop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/viewLocationTop">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_address"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/txt_2664_royal_ln_mesa_newjersey"
                    android:textColor="@color/black_text_color"
                    android:textSize="15sp"
                    android:textStyle="normal"

                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPickAndDrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPickUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="@string/txt_pick_up"
                        android:textColor="#5b5b5b"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPickUpAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="#242e42"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@id/tvPickUp"
                        app:layout_constraintTop_toBottomOf="@id/tvPickUp" />

                    <View
                        android:id="@+id/viewPickUp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#efeff4"
                        app:layout_constraintTop_toBottomOf="@id/tvPickUpAddress" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Destination"
                        android:textColor="#5b5b5b"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/viewPickUp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDestinationAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="#242e42"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@id/tvDestination"
                        app:layout_constraintTop_toBottomOf="@id/tvDestination" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/viewLocationBottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey_arrow"
                app:layout_constraintTop_toBottomOf="@id/clMainPickDrop" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDistanceTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewLocationBottom">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/txt_time_title"
                    android:textColor="@color/grey_text_color"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/txt_distance"
                    android:textColor="@color/grey_text_color"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/txt_price_title"
                    android:textColor="@color/grey_text_color"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDistanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="-1sp"
                    android:text="@string/txt_2_miles"
                    android:textColor="@color/black_text_color"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/tvDistance"
                    app:layout_constraintTop_toBottomOf="@id/tvDistance" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="-1sp"
                    android:maxLines="1"
                    android:text="@string/txt_time"
                    android:textColor="@color/black_text_color"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/tvTime"
                    app:layout_constraintStart_toStartOf="@id/tvTime"
                    app:layout_constraintTop_toBottomOf="@id/tvTime" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPriceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="-1sp"
                    android:text="@string/txt_actual_price"
                    android:textColor="@color/black_text_color"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/tvPrice"
                    app:layout_constraintTop_toBottomOf="@id/tvPrice" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/viewBottom"
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/black_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clDistanceTime"></View>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
