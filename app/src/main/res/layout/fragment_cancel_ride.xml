<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.cancelRideFragment.CancelRideFragment">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/cancel_ride"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCancelRide"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/pink_card"
            android:gravity="center"
            android:text="@string/i_want_to_cancel_my_ride_because"
            android:textColor="@color/black_text_color"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@+id/ivBack" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCancelRide"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCancelReason"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/cancel_reason_item"
                android:nestedScrollingEnabled="true"
                android:layout_weight="1"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_8_rad_1_stroke"
                android:gravity="start"
                android:hint="@string/please_specify_your_reason"
                android:maxLines="5"
                android:minLines="5"
                android:maxLength="150"
                android:padding="10dp"
                android:textAlignment="viewStart"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvCharCount"
                android:layout_gravity="end"
                android:text="0/150"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/no"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/etReason" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/shape_round_button"
                android:backgroundTint="@color/pink_card"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textColor="@color/black_text_color"
                android:textSize="14sp"
                app:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/btnNo" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>