<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.chat.ChatActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            app:cardElevation="2dp"
            app:layout_constraintVertical_bias="0"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/ivProfileImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"
                    app:srcCompat="@drawable/ic_back"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintStart_toEndOf="@id/ivBack"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/photo_driver"
                    android:layout_marginTop="10dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#676767"
                    android:text="@string/txt_riya"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toTopOf="@id/ivProfileImage"
                    app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"
                    app:layout_constraintStart_toEndOf="@id/ivProfileImage"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cvTop"
            app:layout_constraintBottom_toTopOf="@id/etMessage"
            android:layout_margin="5dp"
            android:orientation="vertical"
            tools:listitem="@layout/item_chat"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toTopOf="@id/etMessage"
            app:layout_constraintBottom_toBottomOf="@id/etMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_mic"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/ivMic"
            app:layout_constraintTop_toTopOf="@id/ivMic"
            app:layout_constraintEnd_toStartOf="@id/ivMic"
            app:srcCompat="@drawable/ic_attach"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_button"
            android:backgroundTint="@color/pink_card"
            android:hint="@string/txt_start_typing"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:maxLines="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivAttach"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="50dp"
            android:paddingBottom="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/walk_title_color"
            tools:text="@string/txt_send"
            android:elevation="5dp"
            android:gravity="center"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toTopOf="@id/etMessage"
            app:layout_constraintBottom_toBottomOf="@id/etMessage"
            app:layout_constraintEnd_toEndOf="@id/etMessage"
            android:layout_marginEnd="5dp"
            android:padding="7dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

