<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCustomerImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/rectangle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/john_doe"
            android:textColor="@color/black_text_color2"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toEndOf="@+id/ivCustomerImage"
            app:layout_constraintTop_toTopOf="@+id/ivCustomerImage"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/_8_june_2019_18_39"
            android:textSize="10sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="@+id/tvCustomerName"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            app:layout_constraintStart_toStartOf="@+id/tvCustomerName"
            app:layout_constraintTop_toBottomOf="@+id/tvCustomerName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="@string/very_helpful_and_friendly_drivers_flexible_and_well_tailored_to_our_plan_vehicles_in_good_condition_too"
            android:textSize="11sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvCustomerName"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/stroke_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRating" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>