<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRideStatus"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/theme"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="@string/completed"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRideDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:text="@string/_8_june_2019_18_39"
                android:textColor="@color/black_text_color2"
                android:textSize="13sp"
                app:fontFamily="@font/poppins_semibold"
                app:layout_constraintBottom_toBottomOf="@id/tvRideStatus"
                app:layout_constraintEnd_toStartOf="@+id/tvRideStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvRideStatus" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/stroke_light"
                app:layout_constraintEnd_toEndOf="@+id/tvRideStatus"
                app:layout_constraintStart_toStartOf="@+id/tvRideDate"
                app:layout_constraintTop_toBottomOf="@+id/tvRideStatus" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="21dp"
                android:textColor="@color/black_text_color_dark"
                android:textSize="13sp"
                app:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivTrack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/tvEndTime"
                app:layout_constraintStart_toEndOf="@+id/tvStartTime"
                app:layout_constraintTop_toBottomOf="@+id/tvStartTime"
                app:layout_constraintTop_toTopOf="@+id/tvStartTime"
                app:srcCompat="@drawable/ic_route" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStartAdress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="16dp"
                android:maxLines="4"
                android:minLines="3"
                android:text="@string/_1_thrale_street_london_se19hw_uk"
                android:textColor="@color/black_text_color2"
                android:textSize="15sp"
                app:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivTrack"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEndTime"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black_text_color_dark"
                android:textSize="13sp"
                app:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStartAdress" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEndAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:maxLines="4"
                android:minLines="3"
                android:text="@string/_18_ocean_avenue_london_se19hw_uk"
                android:textColor="@color/black_text_color2"
                android:textSize="15sp"
                app:fontFamily="@font/poppins_regular"
                app:layout_constraintBottom_toTopOf="@+id/tvCancelSchedule"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivTrack"
                app:layout_constraintTop_toTopOf="@+id/tvEndTime" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCancelSchedule"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/cancel_btn_red_color"
                android:gravity="center"
                android:text="Cancel"
                android:visibility="gone"
                android:layout_marginVertical="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEndAddress" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>