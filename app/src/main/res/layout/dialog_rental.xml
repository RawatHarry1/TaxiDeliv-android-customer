<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_rounded"
    android:paddingHorizontal="@dimen/_15sdp"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:id="@+id/viewTop"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPickUpAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/pick_up_address"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTop" />

    <EditText
        android:id="@+id/etPickup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_outline_gray_4dp"
        android:drawableStart="@drawable/ic_pick_up_map_pin"
        android:drawablePadding="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Pick-up location"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="textPersonName"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvPickUpAddressLabel" />
    <TextView
        android:id="@+id/tvDropOffAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/drop_off_address"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPickup" />

    <EditText
        android:id="@+id/etDropOff"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_outline_gray_4dp"
        android:drawableStart="@drawable/ic_pick_up_map_pin"
        android:drawablePadding="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Drop-off location"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="textPersonName"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvDropOffAddressLabel" />
    <TextView
        android:id="@+id/tvPickUpDateTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/from"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDropOff" />

    <LinearLayout
        android:id="@+id/llPickupDateAndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvPickUpDateTimeLabel">

        <EditText
            android:id="@+id/etPickupDate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_gray_4dp"
            android:drawableStart="@drawable/ic_calender"
            android:drawablePadding="@dimen/_10sdp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="----"
            android:inputType="date"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/viewTop" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/etPickupTime"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_gray_4dp"
            android:drawableStart="@drawable/ic_watch"
            android:drawablePadding="@dimen/_10sdp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="----"
            android:inputType="date"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/viewTop" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDropOffDateTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/to"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llPickupDateAndTime" />


    <LinearLayout
        android:id="@+id/llDropOffDateAndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvDropOffDateTimeLabel">

        <EditText
            android:id="@+id/etDropDate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_gray_4dp"
            android:drawableStart="@drawable/ic_calender"
            android:drawablePadding="@dimen/_10sdp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="----"
            android:inputType="date"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/viewTop" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/etDropTime"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_outline_gray_4dp"
            android:drawableStart="@drawable/ic_watch"
            android:drawablePadding="@dimen/_10sdp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="----"
            android:inputType="date"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/viewTop" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llDropOffDateAndTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/with_a_driver"
        android:textColor="@color/theme"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/switchCompat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/switchCompat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/txt_submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>
