<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_8_rad_1_stroke"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleAmountAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="@string/amount_added"
                android:textColor="@color/black_text_color2"
                android:textSize="12sp"
                app:fontFamily="@font/poppins_medium" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAmountAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/green_text_color"
                android:textSize="12sp"
                app:fontFamily="@font/poppins_medium" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/stroke_light" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="@string/date"
                android:textColor="@color/black_text_color2"
                android:textSize="12sp"
                app:fontFamily="@font/poppins_regular" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black_text_color2"
                android:textSize="12sp"
                app:fontFamily="@font/poppins_regular" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:text="@string/time"
                android:textColor="@color/black_text_color2"
                android:textSize="12sp"
                app:fontFamily="@font/poppins_regular" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black_text_color2"
                android:textSize="12sp"
                app:fontFamily="@font/poppins_regular" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleProcessNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:text="@string/process_number"
                android:textColor="@color/black_text_color2"
                android:textSize="12sp"
                app:fontFamily="@font/poppins_regular" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProcessNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black_text_color2"
                android:textSize="12sp"
                app:fontFamily="@font/poppins_regular" />


        </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>