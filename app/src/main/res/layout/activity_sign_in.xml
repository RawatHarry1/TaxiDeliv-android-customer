<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.sign_in.SignIn">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_back"
            android:padding="2dp"
            android:layout_margin="5dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/txt_welcome_back"
            android:textColor="@color/theme_button"
            android:textSize="20dp"
            android:layout_marginTop="3dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvThanksForGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="@id/tvWelcome"
            app:layout_constraintEnd_toEndOf="@id/tvWelcome"
            android:text="@string/txt_thanks_for_going_green"
            android:textColor="@color/walk_desc_color"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginStart="-30dp"
            android:layout_marginEnd="-30dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/txt_sign_up"
            android:textColor="@color/border_color_dark"
            android:textSize="14dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"

            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toEndOf="@id/tvSignUp"
            android:text="@string/txt_sign_in"
            android:textColor="@color/theme_button"
            android:textSize="14dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            />

        <View
            android:id="@+id/view_sign_up"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="@id/tvSignUp"
            app:layout_constraintEnd_toEndOf="@id/tvSignUp"
            app:layout_constraintTop_toBottomOf="@id/tvSignUp"
            android:layout_marginTop="3dp"
            />
        <View
            android:id="@+id/view_sign_in"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="@id/tvSignIn"
            app:layout_constraintEnd_toEndOf="@id/tvSignIn"
            app:layout_constraintTop_toBottomOf="@id/tvSignIn"
            android:layout_marginTop="3dp"
            android:background="@color/sign_up_underline"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvSignUp"
            app:layout_constraintStart_toStartOf="@id/tvSignUp"
            android:text="@string/txt_phone_number"
            android:textColor="@color/walk_desc_color"
            android:textSize="14dp"
            android:layout_marginTop="28dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/tvEmailAddress">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                app:ccp_textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/txt_phone_number"
                android:inputType="number"
                android:maxLength="20"
                android:paddingVertical="@dimen/_4sdp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/ccp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ccp"
                app:layout_constraintTop_toTopOf="@id/ccp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/walk_title_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEmail" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <CheckBox
            android:id="@+id/cbRememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/clPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/txt_remember_me"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/walk_desc_color"
            android:textSize="14dp"
            android:checked="true"
            android:layout_marginStart="12dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/txt_sign_in"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/cbRememberMe" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvSignUpBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/txt_forgot_password"
            android:textColor="@color/walk_desc_color"
            android:textSize="14dp"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFacebookBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/shape_round_button"
            android:padding="12dp"
            android:text="@string/txt_connect_with_facebook"
            android:textColor="@color/border_color_dark"
            android:textSize="18dp"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_facebook_login"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGoogleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="30dp"
            android:background="@drawable/shape_round_button"
            android:padding="12dp"
            android:text="@string/txt_connect_with_google"
            android:textColor="@color/border_color_dark"
            android:textSize="18dp"
            android:drawableStart="@drawable/ic_google_login"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvFacebookBtn" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

