<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clRootView"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_top_rounded"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

        <View
            android:id="@+id/viewTop"
            android:layout_width="30dp"
            android:layout_height="5dp"
            app:layout_constraintBottom_toTopOf="@id/rvCarsType"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/grey_line_color">
        </View>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCarsType"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            tools:listitem="@layout/item_cars_type"
            tools:itemCount="6"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="15dp"
            android:nestedScrollingEnabled="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/viewTop"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/tvSelectTypeBtn"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectTypeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/txt_select_type"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvSchedule"
            app:layout_constraintBottom_toBottomOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cvSchedule"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/tvSelectTypeBtn"
            app:layout_constraintBottom_toBottomOf="@id/tvSelectTypeBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvSelectTypeBtn"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_schedule_car"
                />

        </androidx.cardview.widget.CardView>
<!--    </androidx.constraintlayout.widget.ConstraintLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>