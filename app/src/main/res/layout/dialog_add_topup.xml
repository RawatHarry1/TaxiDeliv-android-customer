<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivClose"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_close_black"
                android:layout_marginTop="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ivClose"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/top_up"
                android:textSize="20sp"
                android:gravity="center"
                android:drawableEnd="@drawable/ic_top_up"
                android:drawableTint="@color/black_text_color2"
                android:drawablePadding="6dp"
                android:textColor="@color/black_text_color2"
                app:fontFamily="@font/poppins_bold"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleEnterAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_amount"
                android:textSize="16sp"
                app:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                android:textColor="@color/black_text_color2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"

                />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:id="@+id/etEnterAmount"
                app:layout_constraintTop_toBottomOf="@+id/titleEnterAmount"
                android:textSize="12sp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_8_rad_1_stroke"
                android:padding="16dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black_text_color2"
                android:text="@string/_100"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnAddAmount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_button"
                android:padding="10dp"
                android:text="@string/add_amount"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/etEnterAmount" />






        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>