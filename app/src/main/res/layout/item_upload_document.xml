<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clUploadDriverLicense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:background="@drawable/doc_corner_bg"
    android:paddingVertical="10dp"
    app:layout_constraintTop_toBottomOf="@+id/tvUploadVerificationDoc">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleUploadLicense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/sufi_semi_bold"
        android:text="@string/_1_upload_driver_s_license"
        android:textColor="@color/walk_title_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clDocument"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/tvTitleUploadLicense"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sufi_semi_bold"
            android:text="Rejected"
            android:textColor="#FF0E0E"
            android:drawableEnd="@drawable/ic_new_info"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"
            android:drawablePadding="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sufi_semi_bold"
            android:text="Expired"
            android:textColor="#CFA305"
            android:visibility="gone"
            android:drawableEnd="@drawable/ic_new_document_expire"
            android:textSize="14sp"
            android:gravity="center"
            android:drawablePadding="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="normal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btUploadVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:background="@drawable/bg_theme_shape_round_button"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleUploadLicense" />

</androidx.constraintlayout.widget.ConstraintLayout>