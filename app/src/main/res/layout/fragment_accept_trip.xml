<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.home.AcceptTripActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_button" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBack">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/accept_trip"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:fontFamily="@font/poppins_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/pink_card"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivCustomerPic"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/rectangle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="@+id/ivCustomerPic"
                            app:layout_constraintEnd_toStartOf="@+id/ivCall"
                            app:layout_constraintTop_toTopOf="@+id/ivCustomerPic"
                            app:srcCompat="@drawable/ic_msg" />

                        <ImageView
                            android:id="@+id/ivMsgIndicator"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/bg_round_outline_button"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@id/ivMsg"
                            app:layout_constraintTop_toTopOf="@id/ivMsg"
                            app:tint="@color/red_text_color" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCustomerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@string/esther"
                            android:textColor="@color/black_text_color2"
                            android:textSize="20sp"
                            app:fontFamily="@font/proxima_bold"
                            app:layout_constraintBottom_toBottomOf="@id/ivCustomerPic"
                            app:layout_constraintStart_toEndOf="@+id/ivCustomerPic"
                            app:layout_constraintTop_toTopOf="@+id/ivCustomerPic"

                            />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="27dp"
                            app:layout_constraintBottom_toBottomOf="@+id/ivCustomerPic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ivCustomerPic"
                            app:srcCompat="@drawable/ic_call" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:text="@string/july_24_2020_9_58_am"
                            android:textColor="@color/black_text_color2"
                            android:textSize="15sp"
                            app:fontFamily="@font/proxima_regular"
                            app:layout_constraintStart_toStartOf="@+id/ivCustomerPic"
                            app:layout_constraintTop_toBottomOf="@+id/ivCustomerPic" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/titlePickUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="22dp"
                            android:text="@string/pick_up"
                            android:textColor="@color/text_color"
                            android:textSize="11sp"
                            app:fontFamily="@font/poppins_regular"
                            app:layout_constraintStart_toStartOf="@+id/tvDateTime"
                            app:layout_constraintTop_toBottomOf="@+id/tvDateTime" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPickUp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:maxLines="2"
                            android:text="@string/_199_brown_estate_apt_866"
                            android:textColor="@color/black_text_color2"
                            android:textSize="15sp"
                            app:fontFamily="@font/poppins_semibold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/titlePickUp"
                            app:layout_constraintTop_toBottomOf="@+id/titlePickUp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/titleDestination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/destination"
                            android:textColor="@color/text_color"
                            android:textSize="11sp"
                            app:fontFamily="@font/poppins_regular"
                            app:layout_constraintStart_toStartOf="@+id/tvDateTime"
                            app:layout_constraintTop_toBottomOf="@+id/tvPickUp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDestination"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:maxLines="2"
                            android:text="@string/_199_brown_estate_apt_866"
                            android:textColor="@color/black_text_color2"
                            android:textSize="15sp"
                            app:fontFamily="@font/poppins_semibold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/titleDestination"
                            app:layout_constraintTop_toBottomOf="@+id/titleDestination" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPath"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginStart="29dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvDestination"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvPickUp"
                            app:srcCompat="@drawable/ic_vertical_path" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCustomerName1"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginHorizontal="29dp"
                            android:layout_marginTop="36dp"
                            android:gravity="center_vertical"
                            android:text="@string/esther"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            app:fontFamily="@font/poppins_regular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDestination" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="29dp"
                            android:background="@color/grey_arrow"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/tvCustomerName1" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCustomerMsg"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginHorizontal="29dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/kindly_call_me_once_you_arrive"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            app:fontFamily="@font/poppins_regular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view1" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="29dp"
                            android:background="@color/grey_arrow"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/tvCustomerMsg" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivHorizontalPath"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            app:layout_constraintTop_toBottomOf="@+id/view2"
                            app:srcCompat="@drawable/ic_horizontal_path" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/titleFare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="34dp"
                            android:text="@string/fare"
                            android:textColor="@color/grey_text_color3"
                            app:fontFamily="@font/poppins_bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ivHorizontalPath"
                            app:textAllCaps="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/usd_20_43"
                            android:textColor="@color/theme"
                            android:textSize="40sp"
                            app:fontFamily="@font/poppins_regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/titleFare" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvInclTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:text="@string/incl_tax"
                            android:textColor="@color/grey_text_color3"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvFare" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCustomerNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Customer Note:"
                            android:textColor="@color/black_text_color"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvInclTax" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCustomerNoteValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black_text_color"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/tvCustomerNote"
                            app:layout_constraintTop_toBottomOf="@+id/tvCustomerNote" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_round_outline_button"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:text="@string/cancel_ride"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:fontFamily="@font/poppins_regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSignUpBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_theme_shape_round_button"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:fontFamily="@font/poppins_regular" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRateCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_theme_shape_round_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/rate_customer"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:fontFamily="@font/poppins_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>