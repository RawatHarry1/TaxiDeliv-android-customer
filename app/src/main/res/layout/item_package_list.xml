<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/package_details"
                android:textColor="@color/theme"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivEdit"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_edit_pencil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/ivDelete" />

            <ImageView
                android:id="@+id/ivDelete"
                android:src="@drawable/ic_delete_red"
                android:padding="@dimen/_6sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/grey_line"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Package Size"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPackageSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Small"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/grey_line"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Package Type"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPackageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Grocery"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/grey_line"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/quantity"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPackageQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="2"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>